---
import "@/styles.css";
import GlobalMenu from "@/components/menu/global-menu";

interface Props {
  title?: string;
}

const title = Astro.props.title ?? "CarApi docs";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <GlobalMenu client:load />
    <main class="mx-4">
      <slot />
    </main>
  </body>
</html>
